<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.RelativeLayout">

    <ImageView
        android:id="@+id/new_image_item_imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/image"
        app:srcCompat="@drawable/photo"
        />

    <TextView
        android:id="@+id/new_image_item_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/new_image_item_imageView"
        android:layout_alignLeft="@id/new_image_item_imageView"
        android:layout_alignBottom="@id/new_image_item_imageView"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:text="@string/new_string"
        android:textAlignment="center"
        android:textColor="@color/colorWhite" />

</merge>